# ============================================
# Project Configuration
# ============================================
# 프로젝트 루트 경로 (backend 모듈 import를 위해 필요)
# Windows 예시: C:\Users\user\github\unigo
# Linux/Mac 예시: /home/user/github/unigo
PROJECT_ROOT=

# ============================================
# Figma Configuration
# ============================================
FIGMA_ACCESS_TOKEN=your_figma_access_token_here

# 선택사항
MCP_SERVER_PORT=3000
DEBUG=figma-mcp:*

# ============================================
# API Keys
# ============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace
HUGGINGFACEHUB_API_TOKEN=

# ============================================
# Langchain & LangSmith
# ============================================
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING="true"
LANGSMITH_PROJECT="rag-major-mentor"

# ============================================
# Pinecone Vector Database
# ============================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME="majors-index"
PINECONE_ENVIRONMENT=us-east-1

# ============================================
# Backend Data Configuration
# ============================================
DATA_DIR=backend/data                                       # DATA DIR
RAW_JSON=backend/data/*.json                            # RAW json
VECTORSTORE_PATH=backend/data/processed/                    # Vectorstore (unused placeholder)
VECTORSTORE_DIR=backend/data/vector_db                      # Persisted Chroma directory

# ============================================
# LLM Configuration
# ============================================
LLM_PROVIDER=openai                                    # openai | ollama | huggingface
MODEL_NAME=gpt-4o-mini                         # Model identifier (provider-specific)

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_PROVIDER=openai                              # openai | huggingface
EMBEDDING_MODEL_NAME=text-embedding-3-small                   # Embedding model identifier

# ============================================
# MySQL Database Configuration
# ============================================
MYSQL_HOST=host.docker.internal
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DB=unigo_db

# ============================================
# Django Configuration
# ============================================
DJANGO_SECRET_KEY="DJANGO_SECRET_KEY"
DJANGO_DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]